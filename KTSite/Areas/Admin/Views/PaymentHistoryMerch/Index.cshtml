@model IEnumerable<PaymentHistoryMerch>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Merch's Payments History </h2>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th></th>
                    <th>Merch Type</th>
                    <th>Merch Name</th>
                    <th>Payment Date</th>
                    <th>Payment Method</th>
                    <th>Sent To</th>
                    <th>Sent From</th>
                    <th>Amount</th>
                    <th></th>
            </thead>

            @foreach (PaymentHistoryMerch paymentHistoryMerch in Model)
            {
        <tr>
            <td>@paymentHistoryMerch.Id</td>
            <td>@paymentHistoryMerch.MerchType</td>
            <td>@ViewBag.getUserName(paymentHistoryMerch.UserNameId)</td>
            <td>@paymentHistoryMerch.PayDate</td>
            <td>@paymentHistoryMerch.PaymentMethod</td>
            <td>@paymentHistoryMerch.SentToAddress</td>
            <td>@paymentHistoryMerch.SentFromAddress</td>
            <td>@paymentHistoryMerch.Amount.ToString("0.00")$</td>
            <td>
                <div class="text-center">
                    <a href="/Admin/PaymentHistoryMerch/AddPaymentMerch/@paymentHistoryMerch.UserNameId" class="btn btn-success text-white" style="cursor:pointer"
                       data-toggle="tooltip" data-placement="top" title="Payment">
                        <i class="fas fa-dollar-sign"></i>
                    </a>
                </div>
            </td>
        </tr>}

        </table>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable({ "order": [[0, "desc"]] });
        });
    </script>
}


