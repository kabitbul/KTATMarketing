@model IEnumerable<ReturningItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-12 text-right">
            <a class="btn btn-primary" asp-action="AddReturningItem" style="background-color:forestgreen" ><i class="fas fa-plus"></i> &nbsp;&nbsp; Update Inventory</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Id</th>
                    <th>Product</th>
                    <th>Item Status</th>
                    <th>Quantity</th>
                    <th>Comments</th>
                    <th>Created By</th>
                    <th>Date Arrived</th>
</thead>
            @foreach (ReturningItem returningItem in Model)
            {
        <tr>
            <td>@returningItem.Id</td>
            <td>@ViewBag.getProductName(returningItem.ProductId).ToString()</td>
            <td>@returningItem.ItemStatus</td>
            @if (returningItem.ItemStatus == "Add")
            {
        <td style="background-color:darkseagreen">@returningItem.Quantity</td> }
                        else if (returningItem.ItemStatus == "Remove")
                        {
        <td style="background-color:palevioletred">@returningItem.Quantity</td>
 }
    else
    {
        <td>@returningItem.Quantity</td>}
            <td>@returningItem.Comments</td>
            <td>@returningItem.CreatedBy</td>
            <td>@returningItem.DateArrived.ToString("dd/MM/yyyy")</td>
        </tr>
            }
        </table>
    </div>
</div>
 @section Scripts{
        <script>$(document).ready(function () {
    $('#tblData').DataTable({ "order": [[0,"desc"]]});
            });</script>
    }


