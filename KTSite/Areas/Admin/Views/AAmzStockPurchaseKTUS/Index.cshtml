@model IEnumerable<AAmzStockPurchase>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controllerName = "AAmzStockPurchaseKTUS";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Stock Purchase List </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a class="btn btn-primary" asp-action="AddStock" style="background-color:forestgreen"><i class="fas fa-plus"></i> &nbsp; Create New Product Order</a>
        </div>
    </div>
    <br />
    <div class="p-4 border rounded">
        <div id="StillOnTheWay">
            <input type="checkbox" id="pos" value=true />  Show All
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Id</th>
                    <th>ProductAsin</th>
                    <th>China name</th>
                    <th>Quantity</th>
                    <th>Date Ordered</th>
                    <th>Date Received</th>
                    <th>Tracking Updated</th>
                    <th>Line number</th>
                    <th></th>
</thead>

            @foreach (AAmzStockPurchase inventoryOrdersToAmazon in Model)
            {
        <tr>
                    <td>@inventoryOrdersToAmazon.Id</td>
                    <td>@inventoryOrdersToAmazon.ProductAsin</td>
                    <td>@inventoryOrdersToAmazon.ProductChinaName</td>
                    <td>@inventoryOrdersToAmazon.Quantity</td>
                    <td>@inventoryOrdersToAmazon.DateOrdered.ToString("dd/MM/yyyy")</td>
                    @if (@inventoryOrdersToAmazon.DateReceived != null)
                    {
                        <td>@inventoryOrdersToAmazon.DateReceived.ToString("dd/MM/yyyy")</td>
                    }
                    else
                    {
                     <td></td>
                    }
                @if (inventoryOrdersToAmazon.InboundUpdated)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>@inventoryOrdersToAmazon.lineNumber</td>
             @if (!inventoryOrdersToAmazon.InboundUpdated)
              {
               <td>
                <div class="text-center">
                                <a href="/Admin/@controllerName/UpdateStock/@inventoryOrdersToAmazon.Id" class="btn btn-success text-white" style="cursor:pointer"
                 data-toggle="tooltip" data-placement="top" title="Edit Stock Order">
                    <i class="fas fa-edit"></i>
                </a>
            </div>
        </td> }
                        else
                        {
        <td></td>}
        </tr>
            }

        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable({ "order": [[0, "desc"]], "pageLength": 100 });
        });</script>
    <script>
        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                var receviedAll = data[6];
                if ($('#pos').prop("checked") == true && receviedAll == "No") {
                    return true;
                } else if ($('#pos').prop("checked") == false) {
                    return true;
                }
                else { return false; }
            }
        );
        $('input:checkbox').on('change', function () {
            var table = $('#tblData').DataTable();
            table.draw();
        });</script>
}


