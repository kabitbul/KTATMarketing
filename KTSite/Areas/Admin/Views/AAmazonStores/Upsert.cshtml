
@model KTSite.Models.AAmazonStores

@{ Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create New Amazon Store"; }

<form method="post">
    <div class="row p-3 border">
        <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Id != 0)
            {
                //edit
                title = "Edit Store Data";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StoreName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StoreName" class="form-control" />
                        <span asp-validation-for="StoreName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
            <partial name="_EditAndBackToListButton" model="Model.Id" /> }
        else
        {
<partial name="_CreateAndBackToListButton" />}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    @if (ViewBag.ShowMsg && ViewBag.state)
    {
         <script>swal("Success!", "Store Added!", "success")
        .then((value) => { window.location.href = '/Admin/AAmazonStores'; })</script>
    }
}
