
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Payment Balance User's List </h2>
        </div>
        @*<div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="insert" style="background-color:forestgreen"><i class="fas fa-plus"></i> &nbsp; Add User To Table</a>
        </div>*@
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="index" style="background-color:forestgreen"><i class="fas fa-eye"></i> &nbsp; Back to User Balance</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>User Name</th>
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Last Paid Date</th>
                </tr>
            </thead>
            @foreach (PaymentBalanceMerch paymentBalanceMerch in Model)
            {
        <tr>
            <td>@ViewBag.getUserName(paymentBalanceMerch.UserNameId).ToString()</td>
            <td>@ViewBag.getName(paymentBalanceMerch.UserNameId).ToString()</td>
            <td>@paymentBalanceMerch.Balance.ToString("0.00")$</td>
            <td>@ViewBag.getLastPaidDate(paymentBalanceMerch.UserNameId).ToString()</td>
        </tr>
}
        </table>
    </div>
</div>
