@model IEnumerable<Refund>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Refunds List </h2>
        </div>
    </div>
    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Refund Id</th>
                    <th>Order Id</th>
                    <th>Refund Quantity</th>
                    <th>Refund Amount</th>
                    <th>Charged From Merch</th>
                    <th>Refunded By</th>
                    <th>Refund Date</th>
</thead>

            @foreach (Refund refund in Model)
            {
        <tr>
            <td>@refund.Id</td>
            <td>@refund.OrderId</td>
            <td>@refund.RefundQuantity</td>
            <td>@ViewBag.getRefundAmount(refund.Cost.ToString(), refund.Quantity.ToString(),refund.RefundQuantity.ToString()).ToString()</td>
            <td>@refund.AmountChargedFromMerch.ToString("0.00")</td>
            <td>@refund.RefundedBy</td>
            <td>@refund.RefundDate</td>
        </tr>
            }

        </table>
    </div>
</div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable({ "order": [[0, "desc"]] });
            });</script>
    }


