@model IEnumerable<PaymentMethodMerch>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Your Payment Methods </h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="AddPaymentType" style="background-color:forestgreen"><i class="fas fa-plus"></i> &nbsp; Add Payment Method</a>
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Address</th>
                    <th>Paypal/Payoneer</th>
                    <th>Prefferd Method</th>
                    <th></th>
            </thead>

            @foreach (PaymentMethodMerch paymentMethodMerch in Model)
            {
                <tr>
                    <td>@paymentMethodMerch.PaymentTypeAddress</td>
                    <td>@paymentMethodMerch.PaymentType</td>
                    @if(paymentMethodMerch.PrefferdMethod)
                    {
                        <td style="font-weight:bold;color:forestgreen;font-size:20px">Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    <td>
                        <div class="text-center">
                            <a href="/KTMerch/PaymentMethodMerch/EditPaymentType/@paymentMethodMerch.Id" class="btn btn-success text-white" style="cursor:pointer"
                               data-toggle="tooltip" data-placement="top" title="Edit Payment">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
            $('#tblData').DataTable({ "order": [[0, "desc"]] });
        });</script>
}


