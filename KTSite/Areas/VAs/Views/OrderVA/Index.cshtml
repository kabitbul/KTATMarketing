    <script type="text/javascript">
        function TrackUpdate() {
            var pdata = new FormData();
            $("input[name='trUpdatedChecked']:checked").each(function (index, el) {
                var Id = $(this).siblings("input[type='hidden']").val();
                pdata.append("Ids", Id);
            })
            swal({
                title: "Are you sure?",
                text: "Are you sure?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: "OrderVA/TrackUpdate",
                            type: "POST",
                            data: pdata,
                            processData: false,
                            contentType: false,
                            success: function (data) {
                                swal("Success!", {
                                    icon: "success",
                                });
                                setTimeout(function () {
                                    location.reload()
                                }, 100);
                            }
                        });
                        setTimeout(function () {
                            location.reload()
                        }, 100);
                    } else {
                        swal("Nothing Changed!");
                    }
                });
        }
    </script>
}


