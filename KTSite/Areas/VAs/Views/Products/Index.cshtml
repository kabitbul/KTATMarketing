@model IEnumerable<Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Products List </h2>
        </div>
    </div>
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th></th>
                    <th>Product Name</th>
                    <th>Best Offer</th>
                    <th>Minimum Price</th>
                    <th>Weight</th>
                    <th>Product Description</th>
                    <th>Made In</th>
                    <th>Product ASIN</th>
                    <th>Merch Type</th>
                    <th>Merch Name</th>
</thead>
            @foreach (Product prod in Model)
            {
             <tr>
              @if (prod.ImageUrl != null)
            {
        <td><img src=@prod.ImageUrl.ToString() alt="Product Image" style="height:70px; width: 70px" /></td> }
                        else
                        {
        <td></td>}
            <td>@prod.ProductName</td>
            <td>@prod.BestOffer</td>
            <td>@prod.MinimumPrice</td>
            <td>@prod.Weight</td>
            <td>@prod.ProductDesc</td>
            <td>@prod.MadeIn</td>
            <td>@prod.ProductASIN</td>
            <td>@prod.MerchType</td>
            @if (prod.MerchId != null)
            {
              <td>@ViewBag.getMerchName(prod.MerchId.ToString()).ToString()</td>
            }
            else
            {
                <td></td>
            }
        </tr>
            }
        </table>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable({ "order": [[0, "desc"]] });
            });</script>
    }


